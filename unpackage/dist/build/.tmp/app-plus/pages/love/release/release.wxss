page {
  width: 100%;
  height: 100%;
}
.uni-uploader__input-box {
  margin: 0px;
}
uni-swiper {
  width: 100%;
}
.close-view {
  text-align: center;
  line-height: 22rpx;
  height: 24rpx;
  width: 24rpx;
  border-radius: 50%;
  background: #ef5350;
  color: #FFFFFF;
  position: absolute;
  top: 6rpx;
  right: 8rpx;
  font-size: 24rpx;
}
.release {
  height: 100%;
  position: relative;
  overflow: hidden;
}
.release .emoji {
    width: 100%;
    height: 400rpx;
    position: absolute;
    left: 0;
    bottom: 0;
    background: #e6e6e6;
    overflow: scroll;
}
.release .emoji .item {
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-flex-wrap: wrap;
          -ms-flex-wrap: wrap;
              flex-wrap: wrap;
      padding-left: 2%;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
      width: 100%;
      height: 100%;
}
.release .emoji .item .list {
        width: 14%;
        font-size: 40rpx;
        list-style: none;
        text-align: center;
        display: inline-block;
        line-height: 2.1;
}
.release .wrap {
    width: 100%;
    padding: 0 24rpx;
    -webkit-box-sizing: border-box;
            box-sizing: border-box;
    overflow: hidden;
}
.release .wrap .uni-textarea {
      width: auto;
      line-height: 1.6;
      height: 300rpx;
      margin-top: 10rpx;
      border-bottom: 1px solid #eee;
      -webkit-box-sizing: border-box;
              box-sizing: border-box;
}
.release .wrap .uni-textarea textarea {
        width: 100%;
        height: 100%;
        padding: 0;
        overflow: hidden;
}
.release .wrap .release-hint {
      margin: 18rpx 0;
      display: -webkit-box;
      display: -webkit-flex;
      display: -ms-flexbox;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
          -ms-flex-align: center;
              align-items: center;
      -webkit-box-pack: justify;
      -webkit-justify-content: space-between;
          -ms-flex-pack: justify;
              justify-content: space-between;
}
.release .wrap .release-hint .left {
        height: 48rpx;
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
}
.release .wrap .release-hint .left image {
          width: 48rpx;
          height: 48rpx;
}
.release .wrap .release-hint .left image:nth-child(2) {
            margin-left: 20rpx;
}
.release .wrap .release-hint .right text {
        color: #2c2c2c;
}
